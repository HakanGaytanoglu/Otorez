@model Otorez.Models.ORM.Entity.AdminModels.Reservation

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Otorez | Admin Panel</title>

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/assets/admin/css/style-starter.css">

    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Nunito:300,400,600,700,800,900&display=swap" rel="stylesheet">
</head>

<body class="sidebar-menu-collapsed">
    <div class="se-pre-con"></div>
    <section>
        <!-- sidebar menu start -->
        <div class="sidebar-menu sticky-sidebar-menu">

            <!-- logo start -->
            <div class="logo">
                <h1><a href="index">Otorez</a></h1>
            </div>

            <!-- if logo is image enable this -->
            <!-- image logo --
            <div class="logo">
              <a href="index.html">
                <img src="image-path" alt="Your logo" title="Your logo" class="img-fluid" style="height:35px;" />
              </a>
            </div>
            <!-- //image logo -->

            <div class="logo-icon text-center">
                <a href="/admin/index" title="logo"><img src="~/assets/admin/images/logo.png" alt="logo-icon"> </a>
            </div>
            <!-- //logo end -->

            <div class="sidebar-menu-inner">

                <!-- sidebar nav start -->
                <ul class="nav nav-pills nav-stacked custom-nav">
                    <li>
                        <a href="/admin/index"><i class="fa fa-tachometer"></i><span> Raporlar</span></a>
                    </li>
                    <li class="menu-list active">
                        <a href="#">
                            <i class="fa fa-cogs"></i>
                            <span>Rezervasyon <i class="lnr lnr-chevron-right"></i></span>
                        </a>
                        <ul class="sub-menu-list">
                            <li><a href="/admin/searchavailability">Müsaitlik Ara</a> </li>
                            <li><a href="/admin/searchupdate">Ara / Güncelle</a></li>
                            <li><a href="/admin/payments">Ödeme Takip</a></li>
                            <li><a href="/admin/checkout">Check Out</a></li>
                        </ul>
                    </li>
                    <li class="menu-list">
                        <a href="#">
                            <i class="fa fa-cutlery"></i>
                            <span>Servisler<i class="lnr lnr-chevron-right"></i></span>
                        </a>
                        <ul class="sub-menu-list">
                            <li><a href="/admin/minibar">Minibar</a> </li>
                            <li><a href="/admin/roomservice">Oda Servisi</a></li>
                            <li><a href="/admin/restaurantcafe">Resturant / Cafe</a></li>
                        </ul>
                    </li>
                    <li class="menu-list">
                        <a href="#">
                            <i class="fa fa-id-card"></i>
                            <span>Kimlik Bildirim<i class="lnr lnr-chevron-right"></i></span>
                        </a>
                        <ul class="sub-menu-list">
                            <li><a href="/admin/kbsguestcheckin">Misafir Giriş</a> </li>
                            <li><a href="/admin/kbsguestcheckout">Misafir Çıkış</a></li>
                        </ul>
                    </li>
                    <li><a href="/admin/export"><i class="fa fa-table"></i> <span>Yedekleme</span></a></li>
                </ul>
                <!-- //sidebar nav end -->
                <!-- toggle button start -->
                <a class="toggle-btn">
                    <i class="fa fa-angle-double-left menu-collapsed__left"><span>Kapat</span></i>
                    <i class="fa fa-angle-double-right menu-collapsed__right"></i>
                </a>
                <!-- //toggle button end -->
            </div>
        </div>
        <!-- //sidebar menu end -->
        <!-- header-starts -->
        <div class="header sticky-header">

            <!-- notification menu start -->
            <div class="menu-right">
                <div class="navbar user-panel-top">
                    <div class="search-box">
                        <form action="#search-results.html" method="get">
                            <input class="search-input" placeholder="Search Here..." type="search" id="search">
                            <button class="search-submit" value=""><span class="fa fa-search"></span></button>
                        </form>
                    </div>
                    <div class="user-dropdown-details d-flex">
                        <div class="profile_details_left">
                            <ul class="nofitications-dropdown">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-bell-o"></i><span class="badge blue">@ViewBag.PendingPaymentCount</span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <div class="notification_header">
                                                <h3 style="color:red;"> @ViewBag.PendingPaymentCount adet ödemesi tamamlanmamış rezervasyonunuz var !</h3>
                                            </div>
                                        </li>

                                        <li>
                                            <div class="notification_bottom">
                                                <a href="/admin/payments" class="bg-primary">Tüm ödemesi tamamlanmamış rezervasyonları gör!</a>
                                            </div>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <div class="profile_details">
                            <ul>
                                <li class="dropdown profile_details_drop">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenu3" aria-haspopup="true"
                                       aria-expanded="false">
                                        <div class="profile_img">
                                            <img src="~/Assets/Admin/images/avatar.png" class="rounded-circle" alt="" />
                                            <div class="user-active">
                                                <span></span>
                                            </div>
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu drp-mnu" aria-labelledby="dropdownMenu3">
                                        <li class="user-info">
                                            <h5 class="user-name">@ViewBag.CompanyName</h5>
                                            <span class="status">@ViewBag.EmailAddress</span>
                                        </li>
                                        <li> <a href="/admin/accountsettings"><i class="fa fa-user"></i>Hesap Ayarları</a> </li>
                                        <li> <a href="/admin/hotelsettings"><i class="fa fa-cog"></i>Otel Ayarları</a> </li>
                                        <li> <a href="/admin/servicesettings"><i class="fa fa-cutlery"></i>Servis Ayarları</a> </li>
                                        <li> <a href="/admin/kbssettings"><i class="fa fa-id-card"></i>Kbs Ayarları</a> </li>
                                        <li class="logout"> <a href="/admin/logout"><i class="fa fa-power-off"></i> Çıkış</a> </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--notification menu end -->
        </div>
        <!-- //header-ends -->
        <!-- main content start -->
        <div class="main-content">

            <!-- content -->
            <div class="container-fluid content-top-gap">

                <!-- breadcrumbs -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb my-breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item"><a href="#">Rezervasyon</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Ara / Güncelle</li>
                    </ol>
                </nav>
                <!-- //breadcrumbs -->
                <!-- forms 1 -->
                <div class="card card_border py-2 mb-4">
                    <div class="card-body">
                        <h5 style="color:red; padding-bottom:20px;">@ViewBag.ReservationAdded @ViewBag.DateError @ViewBag.PastDateError</h5>
                        <form method="post">
                            <input type="hidden" name="AccountID" value="@ViewBag.AccountID" placeholder="">
                            <input type="hidden" name="ReservationID" value="@Model.ReservationID" placeholder="">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="FirstName" class="input__label">Mevcut Ad: <span style="color:red;">@Model.FirstName</span></label>
                                    <input type="text" class="form-control input-style" name="FirstName" value=""
                                           placeholder="Yeni Ad">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="LastName" class="input__label">Mevcut Soyad: <span style="color:red;">@Model.LastName</span></label>
                                    <input type="text" class="form-control input-style" name="LastName" value=""
                                           placeholder="Yeni Soyad">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="CheckIn" class="input__label">Mevcut Giriş Tarihi: <span style="color:red;">@Html.ValueFor(model => Model.CheckIn, "{0:dd/MM/yyyy}")</span></label>
                                    <input type="date" class="form-control input-style" name="CheckIn" value=""
                                           placeholder="Yeni Giriş Tarihi">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="CheckOut" class="input__label">Mevcut Çıkış Tarihi: <span style="color:red;">@Html.ValueFor(model => Model.CheckOut, "{0:dd/MM/yyyy}")</span></label>
                                    <input type="date" class="form-control input-style" name="CheckOut" value=""
                                           placeholder="Yeni Çıkış Tarihi">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="MobileNumber" class="input__label">Mevcut Telefon: <span style="color:red;">@Model.MobileNumber</span></label>
                                    <input type="text" class="form-control input-style" name="MobileNumber" value=""
                                           placeholder="Yeni Telefon">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="EmailAddres" class="input__label">Mevcut E-Posta: <span style="color:red;">@Model.EmailAddress</span></label>
                                    <input type="text" class="form-control input-style" name="EmailAddress" value=""
                                           placeholder="Yeni E-Posta">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="TotalNumberAdults" class="input__label">Mevcut Konaklayacak Yetişkin Sayısı: <span style="color:red;">@Model.TotalNumberAdults</span></label>
                                    <input type="number" class="form-control input-style" name="TotalNumberAdults" value=""
                                           placeholder="Yeni Konaklayacak Yetişkin Sayısı">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="TotalNumberKids" class="input__label">Mevcut Konaklayacak Çocuk Sayısı: <span style="color:red;">@Model.TotalNumberKids</span></label>
                                    <input type="number" class="form-control input-style" name="TotalNumberKids" value=""
                                           placeholder="Yeni Konaklayacak Çocuk Sayısı">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="RoomType" class="input__label">Mevcut Oda Tipi: <span style="color:red;">@Model.RoomType</span></label>
                                    <select name="RoomType" class="form-control input-style">
                                        <option value="" disabled selected hidden>Yeni Oda Tipi...</option>
                                        @foreach (var item in ViewBag.RoomTypes)
                                        {
                                            <option value="@item.RoomType">@item.RoomType</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="RoomNumber" class="input__label">Mevcut Oda Kapı Numarası:<span style="color:red;"> @Model.RoomNumber</span> </label>
                                    <input type="number" class="form-control input-style" name="RoomNumber" value=""
                                           placeholder="Yeni Oda Kapı Numarası">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="BoardType" class="input__label">Mevcut Konaklama Tipi: <span style="color:red;">@Model.BoardType</span></label>
                                    <select name="BoardType" class="form-control input-style">
                                        <option value="" disabled selected hidden>Yeni Konaklama Tipi...</option>
                                        <option>Sadece Oda</option>
                                        <option>Oda Kahvaltı</option>
                                        <option>Yarım Pansiyon</option>
                                        <option>Tam Pansiyon</option>
                                        <option>Herşey Dahil</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="PaymentType" class="input__label">Mevcut Ödeme Tipi: <span style="color:red;">@Model.PaymentType</span></label>
                                    <select name="PaymentType" class="form-control input-style">
                                        <option value="" disabled selected hidden>Yeni Ödeme Tipi...</option>
                                        <option>Havale / EFT</option>
                                        <option>Kredi Kartı</option>
                                        <option>Nakit</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="PaymentStatus" class="input__label">Mevcut Ödeme Durumu: <span style="color:red;">@Model.PaymentStatus</span></label>
                                    <select name="PaymentStatus" class="form-control input-style">
                                        <option value="" disabled selected hidden>Yeni Ödeme Durumu...</option>
                                        <option>Kapora Alındı</option>
                                        <option>Tamamlandı</option>
                                        <option>Tamamlanmadı</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="PaymentAmount" class="input__label">Mevcut Ödeme Tutarı: <span style="color:red;">@Model.PaymentAmount</span></label>
                                    <input type="number" class="form-control input-style" name="PaymentAmount"
                                           placeholder="Yeni Ödeme Tutarı">
                                </div>
                                <div class="form-group col-md-1">
                                    <label for="Currency" class="input__label">Para Birimi </label>
                                    <select name="Currency" class="form-control input-style">
                                        <option selected>TL</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="Pets" class="input__label">Mevcut Evcil Hayvan: <span style="color:red;">@Model.Pets</span></label>
                                    <div class="form-check check-remember check-me-out">
                                        <input class="form-check-input checkbox" type="checkbox" value="Kedi" id="gridCheck1" name="Pets">
                                        <label class="form-check-label checkmark" for="gridCheck1">
                                            Kedi
                                        </label>

                                    </div>
                                    <div class="form-check check-remember check-me-out">
                                        <input class="form-check-input checkbox" type="checkbox" value="Köpek" id="gridCheck2" name="Pets">
                                        <label class="form-check-label checkmark" for="gridCheck2">
                                            Köpek
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="ReservationStatus" class="input__label">Rezervasyonu İptal Et </label>
                                    <div class="ReservationStatus">
                                        <label class="custom-chbx">
                                            <input type="checkbox" name="ReservationStatus" value="Cancelled">
                                            <span class="custom-chmrk"></span>
                                        </label>

                                    </div>
                                    
                                </div>
                            </div>


                            <input type="hidden" id="ReservationDate" name="ReservationDate" value="@ViewBag.ReservationDate">
                            <button type="submit" class="btn btn-primary btn-style mt-4">Rezervasyonu Güncelle</button>


                        </form>
                    </div>
                </div>
                <!-- //forms 1 -->



            </div>
            <!-- //content -->
        </div>
        <!-- main content end-->
    </section>
    <!--footer section start-->
    <footer class="dashboard">
        <p>
            &copy 2021 Otorez. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank"
                                                                  class="text-primary">W3layouts.</a>
        </p>
    </footer>
    <!--footer section end-->
    <!-- move top -->
    <button onclick="topFunction()" id="movetop" class="bg-primary" title="Go to top">
        <span class="fa fa-angle-up"></span>
    </button>
    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("movetop").style.display = "block";
            } else {
                document.getElementById("movetop").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    </script>
    <!-- /move top -->


    <script src="~/assets/admin/js/jquery-3.3.1.min.js"></script>
    <script src="~/assets/admin/js/jquery-1.10.2.min.js"></script>

    <!-- chart js -->
    <script src="~/assets/admin/js/Chart.min.js"></script>
    <script src="~/assets/admin/js/utils.js"></script>
    <!-- //chart js -->
    <!-- Different scripts of charts.  Ex.Barchart, Linechart -->
    <script src="~/assets/admin/js/bar.js"></script>
    <script src="~/assets/admin/js/linechart.js"></script>
    <!-- //Different scripts of charts.  Ex.Barchart, Linechart -->


    <script src="~/assets/admin/js/jquery.nicescroll.js"></script>
    <script src="~/assets/admin/js/scripts.js"></script>

    <!-- close script -->
    <script>
        var closebtns = document.getElementsByClassName("close-grid");
        var i;

        for (i = 0; i < closebtns.length; i++) {
            closebtns[i].addEventListener("click", function () {
                this.parentElement.style.display = 'none';
            });
        }
    </script>
    <!-- //close script -->
    <!-- disable body scroll when navbar is in active -->
    <script>
        $(function () {
            $('.sidebar-menu-collapsed').click(function () {
                $('body').toggleClass('noscroll');
            })
        });
    </script>
    <!-- disable body scroll when navbar is in active -->
    <!-- loading-gif Js -->
    <script src="~/assets/admin/js/modernizr.js"></script>
    <script>
        $(window).load(function () {
            // Animate loader off screen
            $(".se-pre-con").fadeOut("slow");;
        });
    </script>
    <!--// loading-gif Js -->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/assets/admin/js/bootstrap.min.js"></script>


</body>

</html>